.about__container {
	display: flex;
	align-items: flex-start;
	justify-content: center;
	padding: 9.375rem 52px;
}

.about__desc {
	width: 57%;
	color: white;
}

.about__info {
	margin-right: 4.25rem;
	color: white;
	width: 40%;
}

.personal-info {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.personal-info__avatar {
	margin-bottom: 5.125rem;
}

.about {
	&__hello {
		margin-bottom: 5px;
	}
	&__text {
		margin-bottom: 5.875rem;
	}
	&__ps {
		font-weight: normal;
  		font-style: italic;
	}
	&__hello, &__ps, &__text {
		opacity: .5;
	}
}

.about__ps {
	display: flex;
	align-items: flex-start;

	&-image {
		margin-left: -40px;
		margin-top: 10px;
		margin-right: 15px;
	}
}

.about__icon {
	width: 20px;
	height: 20px;
	fill: rgba(219, 2, 0, 0.3);
}

.table__list {
	width: 100%;
}

.table__item:nth-child(odd) {
	opacity: .2;
}

.table__item {
	width: 100px;
}

.about__info {
	min-width: 350px;
}

.personal-info {
	width: 100%;

	&__data {
		width: 100%;
	}
}

.about__title {
	margin-bottom: 1.3125rem;
}
