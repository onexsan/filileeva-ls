script(type="text/x-template")#skills-widget
	.skills__data-container
		ul.user-skills
			li.user-skills__item(v-for="skill in skills" :key="skill.skillsGroup")
				skills-row(
					:skill="skill"
				)
		svg(style="width:0; height:0; position: absolute;" aria-hidden="true")
			linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0")
				stop(offset="0%" stop-color='#d0731b')
				stop(offset="100%" stop-color='#dc9322')

script(type="text/x-template")#skills-row
	.skills-row
		h4.skills-row__title {{skill.category}}
		ul.skills-row__list
			li.skills-row__item(v-for="skillItem in skill.skills")
				skill(
          			:skill="skillItem"
				)


script(type="text/x-template")#skill
	.skill
		svg(viewBox="0 0 100 100").skill__circle-shape
			circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
			circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url(#gradient)" transform='rotate(180 50 50)').skill__circle.skill__circle_above
		.skill__circle-text {{skill.title}}
	